{
  "name": "YouTube Playlist Duration",
  "version": "0.1.0",
  "description": "Displays the total duration of YouTube playlists",
  "manifest_version": 3,
  "action": {},
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/playlist*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ]
}
